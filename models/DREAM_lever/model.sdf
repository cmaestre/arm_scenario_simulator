<?xml version='1.0'?>
<sdf version="1.4">
<model name="lever">

    <link name="base">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.8</mass>
        <inertia>
          <ixx>0.0008</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.0008</iyy>
          <iyz>0.0</iyz>
          <izz>0.0083</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
            <mesh>
                <uri>model://DREAM_lever/meshes/base.dae</uri>
            </mesh>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>100</mu>
              <mu2>100</mu2>
            </ode>
          </friction>
        </surface>        
      </collision>

      <visual name="visual">
        <geometry>
            <mesh>
                <uri>model://DREAM_lever/meshes/base.dae</uri>
            </mesh>
        </geometry>
        <material>
          <diffuse>0.1 0.1 0.3 1</diffuse>
          <ambient>0.1 0.1 0.15 1</ambient>
          <specular>0.5 0.5 0.6 1</specular>
          <emissive>0 0 0 0</emissive>
        </material>
        <plugin name="color_plugin" filename="libDREAM_change_color.so"/>
      </visual>
    </link>

    <link name="lever">
      <pose>0 0 0.015 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <pose>0 0 0.035 0 0 0</pose>
        <inertia>
          <ixx>0.0008</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.0083</iyy>
          <iyz>0.0</iyz>
          <izz>0.0008</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
            <mesh>
                <uri>model://DREAM_lever/meshes/lever.dae</uri>
            </mesh>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
            <mesh>
                <uri>model://DREAM_lever/meshes/lever.dae</uri>
            </mesh>
        </geometry>
        <material>
          <diffuse>0.7 0.7 0.9 1</diffuse>
          <ambient>0.1 0.1 0.2 1</ambient>
          <specular>0.8 0.8 0.95 1</specular>
          <emissive>0 0 0 0</emissive>
        </material>
        <plugin name="color_plugin" filename="libDREAM_change_color.so"/>
      </visual>
    </link>



    <joint name="pivot" type="revolute">
        <pose>0 0 0 0 0 0</pose>
        <child>lever</child>
        <parent>base</parent>
        <axis>
            <xyz>1 0 0</xyz>
            <limit>
                <lower>-0.8</lower>
                <upper>0.8</upper>
            </limit>
        </axis>
    </joint>

    <plugin name="sensor" filename="libDREAM_lever_sensor.so"/>

  </model>
</sdf>
